{{define "user-navigation"}}
	<header class="{{if .SingleUser}}singleuser{{else}}multiuser{{end}}">
		<nav id="full-nav">
		{{if .SingleUser}}
			<nav id="user-nav">
				<nav class="dropdown-nav">
					<ul><li><a href="/" title="View blog" class="title">{{.SiteName}}</a> <img class="ic-18dp" src="/img/ic_down_arrow_dark@2x.png" />
						<ul>
							{{if .IsAdmin}}<li><a href="/admin">Panneau d'administration</a></li>{{end}}
							<li><a href="/me/settings">Paramètres du compte</a></li>
							<li><a href="/me/import">Importer des publications</a></li>
							<li><a href="/me/export">Exporter</a></li>
							<li class="separator"><hr /></li>
							<li><a href="/me/logout">Se déconnecter</a></li>
						</ul></li>
					</ul>
				</nav>
				<nav class="tabs">
					<a href="/me/c/{{.Username}}" {{if and (hasPrefix .Path "/me/c/") (hasSuffix .Path .Username)}}class="selected"{{end}}>Personnaliser</a>
					<a href="/me/c/{{.Username}}/stats" {{if hasSuffix .Path "/stats"}}class="selected"{{end}}>Stats</a>
					<a href="/me/posts/"{{if eq .Path "/me/posts/"}} class="selected"{{end}}>Brouillons</a>
				</nav>
			</nav>
			<div class="right-side">
				<a class="simple-btn" href="/me/new">Nouvelles publications</a>
			</div>
		{{else}}
			<div class="left-side">
				<h1><a href="/" title="Return to editor">{{.SiteName}}</a></h1>
			</div>
			<nav id="user-nav">
				{{if .Username}}
				<nav class="dropdown-nav">
					<ul><li class="has-submenu"><a>{{.Username}}</a> <img class="ic-18dp" src="/img/ic_down_arrow_dark@2x.png" /><ul>
							{{if .IsAdmin}}<li><a href="/admin">Panneau d'administration</a></li>{{end}}
							<li><a href="/me/settings">Paramètres du compte</a></li>
							<li><a href="/me/import">Importer des publications</a></li>
							<li><a href="/me/export">Exporter</a></li>
							{{if .CanInvite}}<li><a href="/me/invites">Inviter d'autres personnes</a></li>{{end}}
							<li class="separator"><hr /></li>
							<li><a href="/me/logout">Se déconnecter</a></li>
						</ul></li>
					</ul>
				</nav>
				{{end}}
				<nav class="tabs">
					{{if .SimpleNav}}
						{{ if not .SingleUser }}
						{{if and (and .LocalTimeline .CanViewReader) .Chorus}}<a href="/"{{if eq .Path "/"}} class="selected"{{end}}>Index</a>{{end}}
						{{ end }}
						<a href="/about">A propos</a>
						{{ if not .SingleUser }}
							{{ if .Username }}
						{{if gt .MaxBlogs 1}}<a href="/me/c/"{{if eq .Path "/me/c/"}} class="selected"{{end}}>Blogs</a>{{end}}
						{{if and .Chorus (eq .MaxBlogs 1)}}<a href="/{{.Username}}/"{{if eq .Path (printf "/%s/" .Username)}} class="selected"{{end}}>Mes publications</a>{{end}}
						{{if not .DisableDrafts}}<a href="/me/posts/"{{if eq .Path "/me/posts/"}} class="selected"{{end}}>Brouillons</a>{{end}}
							{{ end }}
						{{if and (and .LocalTimeline .CanViewReader) (not .Chorus)}}<a href="/read">Fil</a>{{end}}
						{{if and (and (and .Chorus .OpenRegistration) (not .Username)) (or (not .Private) (ne .Landing ""))}}<a href="/signup"{{if eq .Path "/signup"}} class="selected"{{end}}>S'inscrire</a>{{end}}
						{{if .Username}}<a href="/me/logout">Se déconnecter</a>{{else}}<a href="/login">Connexion</a>{{end}}
						{{ end }}
					{{else}}
						<a href="/me/c/"{{if eq .Path "/me/c/"}} class="selected"{{end}}>Blogs</a>
						{{if not .DisableDrafts}}<a href="/me/posts/"{{if eq .Path "/me/posts/"}} class="selected"{{end}}>Brouillons</a>{{end}}
						{{if and (and .LocalTimeline .CanViewReader) (not .Chorus)}}<a href="/read">Fil</a>{{end}}
					{{end}}
				</nav>
			</nav>
			{{if .Username}}
				<div class="right-side">
					<a class="simple-btn" href="/{{if .CollAlias}}#{{.CollAlias}}{{end}}">Publier</a>
				</div>
			{{end}}
		{{end}}
		</nav>
	</header>
{{end}}
{{define "header"}}<!DOCTYPE HTML>
<html>
<head>
	<meta charset="utf-8">

	<title>{{.PageTitle}} {{if .Separator}}{{.Separator}}{{else}}&mdash;{{end}} {{.SiteName}}</title>

	<link rel="stylesheet" type="text/css" href="/css/write.css" />
	<link rel="shortcut icon" href="/favicon.ico" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="theme-color" content="#888888" />
	<meta name="apple-mobile-web-app-title" content="{{.SiteName}}">
	<link rel="apple-touch-icon" sizes="152x152" href="/img/touch-icon-152.png">
	<link rel="apple-touch-icon" sizes="167x167" href="/img/touch-icon-167.png">
	<link rel="apple-touch-icon" sizes="180x180" href="/img/touch-icon-180.png">
</head>
<body id="me">
	{{template "user-navigation" .}}
	<div id="official-writing">
{{end}}

{{define "admin-header"}}
<header class="admin">
	<h1>Admin</h1>
	<nav id="admin" class="pager">
		<a href="/admin" {{if eq .Path "/admin"}}class="selected"{{end}}>Tableau de bord</a>
		<a href="/admin/settings" {{if eq .Path "/admin/settings"}}class="selected"{{end}}>Paramètres</a>
		{{if not .SingleUser}}
		<a href="/admin/users" {{if eq .Path "/admin/users"}}class="selected"{{end}}>Utilisateurs</a>
		<a href="/admin/pages" {{if eq .Path "/admin/pages"}}class="selected"{{end}}>Pages</a>
		{{if .UpdateChecks}}<a href="/admin/updates" {{if eq .Path "/admin/updates"}}class="selected"{{end}}>Mises à jour{{if .UpdateAvailable}}<span class="blip">!</span>{{end}}</a>{{end}}
		{{end}}
		{{if not .Forest}}
		<a href="/admin/monitor" {{if eq .Path "/admin/monitor"}}class="selected"{{end}}>Moniteur</a>
		{{end}}
	</nav>
</header>
{{end}}
